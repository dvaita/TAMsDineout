<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookTableActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/white">
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/book_your_table"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/d1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/r5"
            android:layout_below="@+id/r4"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ri1"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/white"
                android:paddingBottom="25dp">
                <RelativeLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/fieldName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="MY BOOKINGS"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlHardcoded" />
                    <Button
                        android:id="@+id/btnMyOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="15dp"
                        android:background="@drawable/draw1"
                        android:text="DETAILS"
                        android:textColor="#000"
                        tools:ignore="HardcodedText,RtlHardcoded" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll1">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/circular"
                        android:padding="10dp"
                        android:src="@drawable/splash"
                        tools:ignore="ContentDescription,RtlHardcoded" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_margin="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img3"
                        android:orientation="vertical"
                        android:weightSum="1"
                        tools:ignore="RtlHardcoded">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="12dp"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="@string/date"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                tools:ignore="NestedWeights" />
                            <TextView
                                android:id="@+id/getDate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="12dp"
                                android:layout_weight="0.7"
                                android:gravity="left|center_vertical"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                tools:ignore="NestedWeights" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"
                            android:weightSum="1">
                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="12dp"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="PAYMENT"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,NestedWeights" />
                            <TextView
                                android:id="@+id/getPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="12dp"
                                android:layout_weight="0.7"
                                android:gravity="left|center_vertical"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                tools:ignore="NestedWeights" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ri2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:weightSum="2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/white">

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="NO BOOKINGS FOUND"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:layout_weight="1.4"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/bookT"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.6"
                    android:padding="5dp"
                    android:textColor="#fff"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/draw2"
                    android:text="@string/book_a_table" />
            </LinearLayout>
        </RelativeLayout>

    <LinearLayout
        android:id="@+id/r5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2.5">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">
            <Button
                android:id="@+id/profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/profileg"
                tools:ignore="ButtonStyle" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">
            <Button
                android:id="@+id/locate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/locationg"
                tools:ignore="ButtonStyle" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">
            <Button
                android:id="@+id/bookTable"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/booktable"
                tools:ignore="ButtonStyle" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">
            <Button
                android:id="@+id/orders"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/orderbg"
                tools:ignore="ButtonStyle" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">
            <Button
                android:id="@+id/menu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/menubg"
                tools:ignore="ButtonStyle" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/r6"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/r5"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            tools:ignore="ContentDescription" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/r1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <Button
                android:id="@+id/book"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="BOOK"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                tools:ignore="ButtonStyle,HardcodedText" />
            <Button
                android:id="@+id/res"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="RESTAURANT"
                android:background="?android:attr/selectableItemBackground"
                android:layout_weight="1"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            tools:ignore="ContentDescription" />
        </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>