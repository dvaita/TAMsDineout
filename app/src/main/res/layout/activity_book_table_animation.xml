<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookTableAnimationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/white">
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/book_your_table"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/d1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_below="@+id/r4"
            android:layout_above="@+id/r5">
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="15dp"
        android:layout_weight="0.5"
        android:layout_gravity="center_horizontal"
        android:id="@+id/video"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:layout_weight="0.5"
        android:background="#000"
        android:gravity="center"
        tools:ignore="ObsoleteLayoutParam">

        <ImageView
            android:id="@+id/slideimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/restaurantphotos"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/r1"
            android:layout_marginTop="5dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/book"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:text="BOOK"
                tools:ignore="ButtonStyle,HardcodedText" />
            <Button
                android:id="@+id/res"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:text="RESTAURANT"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/r5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2.5"
            tools:ignore="DisableBaselineAlignment">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5">
                <Button
                    android:id="@+id/profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/profileg"
                    tools:ignore="ButtonStyle" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5">

                <Button
                    android:id="@+id/locate"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/locationg"
                    tools:ignore="ButtonStyle" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5">

                <Button
                    android:id="@+id/bookTable"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/booktable"
                    tools:ignore="ButtonStyle" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5">
                <Button
                    android:id="@+id/orders"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/orderbg"
                    tools:ignore="ButtonStyle" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5">
                <Button
                    android:id="@+id/menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/menubg"
                    tools:ignore="ButtonStyle" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/r6"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_above="@+id/r5"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>