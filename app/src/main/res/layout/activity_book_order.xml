<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".BookOrderActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/white">
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/book_your_meal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"
                tools:ignore="RelativeOverlap" />
            <Button
                android:id="@+id/proceed"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="7dp"
                android:text="@string/place_order"
                android:textColor="#000000"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r3"
            android:scrollbars="vertical">
            <LinearLayout
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/r3"
                android:layout_below="@+id/r8"
                android:orientation="vertical"
                android:weightSum="1"
                tools:ignore="ObsoleteLayoutParam">
                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                  <TextView
                      android:id="@+id/ttl1"
                      android:layout_width="wrap_content"
                      android:layout_height="40dp"
                      android:layout_marginStart="20dp"
                      android:gravity="center_vertical"
                      android:text="@string/veg"
                      android:textSize="18sp"
                      android:textStyle="bold"
                      android:background="@drawable/white"
                      android:typeface="sans" />
               <ListView
                   android:id="@+id/list1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   tools:ignore="NestedScrolling" />
               </LinearLayout>
                <LinearLayout
                  android:id="@+id/ll2"
                  android:layout_width="match_parent"
                  android:layout_height="200dp"
                  android:layout_marginTop="12dp"
                  android:layout_weight="0.5"
                  android:orientation="vertical">
                  <TextView
                      android:id="@+id/ttl2"
                      android:layout_width="wrap_content"
                      android:layout_height="40dp"
                      android:layout_marginStart="20dp"
                      android:text="@string/non_veg"
                      android:textSize="18sp"
                      android:gravity="center_vertical"
                      android:background="@drawable/white"
                      android:textStyle="bold"
                      android:typeface="sans" />
                  <ListView
                      android:id="@+id/list2"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      tools:ignore="NestedScrolling" />
              </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/white"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/ttl3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:text="@string/indian_breads"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:typeface="sans" />
                    <ListView
                        android:id="@+id/list3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="NestedScrolling" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/ttl4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:text="@string/rice"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:background="@drawable/white"
                        android:typeface="sans" />
                    <ListView
                        android:id="@+id/list4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="NestedScrolling" />
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
        <LinearLayout
            android:id="@+id/r6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/r5"
            android:gravity="center_vertical"
            android:background="@drawable/white"
            android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:text="@string/total_items"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            <TextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="sans" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="@string/total_price"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="sans" />
            <TextView
                android:id="@+id/ttPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/r1"
            android:gravity="center"
            android:background="@drawable/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">
            <Button
                android:id="@+id/myMenu"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/my_meal"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#4A4747"
                android:textStyle="bold"
                android:typeface="sans"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/pizza"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/pizza"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#4A4747"
                android:textStyle="bold"
                android:typeface="sans"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/drinks"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/drinks"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#4A4747"
                android:textStyle="bold"
                android:typeface="sans"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/cuisine"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/cuisines"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#4A4747"
                android:textStyle="bold"
                android:typeface="sans"
                tools:ignore="ButtonStyle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/mealImg"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:id="@+id/pizzaImg"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:id="@+id/drinksImg"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:id="@+id/cuisineImg"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2.5"
            tools:ignore="DisableBaselineAlignment">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">
                <Button
                    android:id="@+id/profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/profileg"
                    tools:ignore="ButtonStyle" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5">

                <Button
                    android:id="@+id/locate"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/locationg"
                    tools:ignore="ButtonStyle" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">

                <Button
                    android:id="@+id/bookTable"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/booktablebg"
                    tools:ignore="ButtonStyle" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">
                <Button
                    android:id="@+id/orders"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/order"
                    tools:ignore="ButtonStyle" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">
                <Button
                    android:id="@+id/menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/menubg"
                    tools:ignore="ButtonStyle" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/r5"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_above="@+id/r4"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>